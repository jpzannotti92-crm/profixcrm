{
    "name": "iatrade/crm",
    "description": "iaTrade CRM - Sistema Profesional de GestiÃ³n de Leads Forex/CFD",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "iaTrade Development Team",
            "email": "dev@iatrade-crm.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "firebase/php-jwt": "^6.8",
        "phpmailer/phpmailer": "^6.8",
        "monolog/monolog": "^3.4",
        "vlucas/phpdotenv": "^5.5",
        "ramsey/uuid": "^4.7",
        "league/csv": "^9.10",
        "intervention/image": "^2.7",
        "symfony/polyfill-mbstring": "^1.28"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "IaTradeCRM\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "IaTradeCRM\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src --level=7",
        "cs-check": "phpcs src --standard=PSR12",
        "cs-fix": "phpcbf src --standard=PSR12",
        "install-db": "php database/install.php",
        "serve": "php -S localhost:8000 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}